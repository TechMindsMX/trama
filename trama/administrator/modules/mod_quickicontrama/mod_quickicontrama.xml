<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	version="2.5"
	client="administrator">
	<name>mod_quickicontrama</name>
	<author>Ricardo Lyon</author>
	<creationDate>May 2014</creationDate>
	<copyright>Copyright (C) 2005 - 2014 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl></authorUrl>
	<version>2.5.0</version>
	<description>MOD_QUICKICONTRAMA_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_quickicontrama">mod_quickicontrama.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_quickicontrama.ini</language>
		<language tag="en-GB">en-GB.mod_quickicontrama.sys.ini</language>
	</languages>
	<help key="JHELP_EXTENSIONS_MODULE_MANAGER_ADMIN_QUICKICON" />
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="context"
					type="text"
					default="mod_quickicontrama"
					description="MOD_QUICKICONTRAMA_GROUP_DESC"
					label="MOD_QUICKICONTRAMA_GROUP_LABEL"
				/>
			</fieldset>
			<fieldset name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />

				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

				<field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="1">JGLOBAL_USE_GLOBAL</option>
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC" />

				<field
					name="automatic_title"
					type="radio"
					default="0"
					label="COM_MODULES_FIELD_AUTOMATIC_TITLE_LABEL"
					description="COM_MODULES_FIELD_AUTOMATIC_TITLE_DESC">
					<option
						value="0">JNO</option>
					<option
						value="1">JYES</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
